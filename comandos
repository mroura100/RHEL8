-- Procesos
ps
-- ver procesos de un usuario
ps -u marc

-- Cambiar permisos ficheros
chown marc:marc fitxer1.txt
-- cambiamos solo el grupo
chgrp mar fitxer1.txt

-- ver tamaño directorio
du -sh /etc/*

-- comprimir un directorio o ficheros
tar -cvzf etccomprimido.tar.gz /etc/*

-- encontrar un achivo
find /home/marc -iname etccomprimido.tar.gz

-- std output info error
stdin -0 
stdount -1
stderr - 2
ls /root 2> /tmp/error.log

-- grep
grep First demofile
-- grep ingnore case sensitive
grep -i first demofile
-- ocultar linias
grep -vi first demofile
-- ocultar varias linias
grep -vie "first" -e "last" demofile
-- mostrar varias linias
grp Fisrt -A 3 demofile
-- cuantas veces se repite la palabra
grep first -C demofile

